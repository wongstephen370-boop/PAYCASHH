name: paycash-backend
services:
  - name: backend
    github:
      repo: wongstephen370-boop/PAYCASHH
      branch: main
    source_dir: backend
    build_command: npm install
    run_command: npm start
    envs:
      - key: MONGODB_URI
        scope: RUN_AND_BUILD
        value: ${MONGODB_URI}   # DO NOT commit real secret; set this in DO dashboard or CI
      - key: JWT_SECRET
        scope: RUN_AND_BUILD
        value: ${JWT_SECRET}    # DO NOT commit real secret; set this in DO dashboard or CI
      - key: NODE_ENV
        scope: RUN_AND_BUILD
        value: production
      - key: PORT
        scope: RUN_AND_BUILD
        value: "8080"
      - key: FRONTEND_URL
        scope: RUN_AND_BUILD
        value: https://paycash.vercel.app
    health_check:
      http_path: /api/auth
    http_port: 8080
